{
	"$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.base.schema.json",
	"name": "vscode-pytorch",
	"image": "huodon/pytorch-devcontainer:118",
	"runArgs": [
		"--gpus",
		"all"
	],
	"hostRequirements": {
		"gpu": "optional"
	},
	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:/home/vscode/.local/bin",
		"LD_LIBRARY_PATH": "$LD_LIBRARY_PATH:/usr/local/cuda/lib64",
		"XLA_FLAGS": "--xla_gpu_cuda_data_dir=/usr/local/cuda",
		// if TZ set to Asia/Shanghai, will use china source mirror
		"TZ":"Asia/Shanghai"
		// "HTTPS_PROXY": "http://192.168.101.25:7890"
		// "MODULAR_AUTH": "if set will install mojo"
	},
	"updateContentCommand": "bash .devcontainer/update.sh",
	"postCreateCommand": [
		"nvidia-smi"
	],
	"mounts": [
		"source=${localEnv:HOME}/.cache,target=/home/vscode/.cache,type=bind,consistency=cached"
	],
	"customizations": {
		"vscode": {
			"settings": {
				"[python]": {
					"editor.defaultFormatter": "ms-python.black-formatter",
					"python.languageServer": "Pylance"
				}
			},
			"extensions": [
				"Codeium.codeium",
				"ms-python.black-formatter",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.vscode-jupyter-slideshow",
				"ms-toolsai.vscode-jupyter-powertoys"
			]
		}
	}
}